<%- include("partials/header"); -%>

    <u>
        <h1 class="home">My Posts</h1>
    </u>
    <br>

    <% if (posts.length===0) { %>
        <p align="center" style="font-family:Sans-serif">You haven't created any posts yet. <a href="/compose">Create
                your first post!</a></p>
        <% } else { %>
            <% posts.forEach(function(post){ %>
                <h1>
                    <%=post.title%>
                        <small style="font-size: 0.5em; color: #666;">
                            <i class="fas fa-user"></i>
                            <%= post.author.username %>
                        </small>
                </h1>

                <p>
                    <%=post.content.substring(0, 100) + " ..." %>
                        <a href="/posts/<%=post._id%>">Read More</a>
                </p>
                <% }) %>
                    <% } %>

                        <%- include("partials/footer"); -%>